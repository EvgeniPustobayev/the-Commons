<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anterior.com.thecommon.LeftMenuActivity">

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75"
            android:background="#111112"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tf_Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="21dp"
                android:text="Evgeni"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:background="#161617"
            android:paddingLeft="37dp"
            android:paddingRight="37dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_Home"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_directory"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Directory"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_rooms"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rooms"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_messages"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_ourSpace"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Space"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
            <Button
                android:id="@+id/btn_Profile"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:background="@android:color/transparent"
                android:textColor="#d3d3d3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
