<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="anterior.com.thecommon.fragment.OurSpaceFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#d4b49d"
            android:paddingRight="55dp"
            android:paddingLeft="55dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_black"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <com.exblr.dropdownmenu.DropdownMenu
                android:id="@+id/dropdown_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ddmBorderColor="@android:color/transparent"
                app:ddmDividerColor="#DDDDDD"
                app:ddmDividerPadding="13dp"
                app:ddmTabIconNormal="@drawable/ic_arrow_down"
                app:ddmTabIconSelected="@drawable/ic_arrow_up"
                app:ddmTabTextColorNormal="#FFFFFF"
                android:background="@android:color/transparent"
                app:ddmTabTextColorSelected="#777777"
                app:ddmTabTextSize="9pt"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_collingwood"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_collingwood"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_theCommon"
                    android:paddingTop="26dp"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="Welcome to The Commons,Collingwood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fontPath="fonts/raleway/Raleway-Bold.ttf"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:paddingTop="35dp"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="Here's a short guid on how to make the most out of the space"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fontPath="fonts/raleway/Raleway-Bold.ttf"
                    tools:ignore="MissingPrefix"/>
                <LinearLayout
                    android:layout_marginTop="35dp"
                    android:background="#d8d8d8"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Access"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fontPath="fonts/raleway/Raleway-Bold.ttf"
                        tools:ignore="MissingPrefix"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ExpandableListView
                        android:id="@+id/extendable_list"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                    </ExpandableListView>
                 </LinearLayout>
                <LinearLayout
                    android:background="#d8d8d8"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Contacts"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fontPath="fonts/raleway/Raleway-Bold.ttf"
                        tools:ignore="MissingPrefix"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ExpandableListView
                        android:id="@+id/extendable_listview1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    </ExpandableListView>

                </LinearLayout>
                <LinearLayout
                    android:background="#d8d8d8"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Contacts"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fontPath="fonts/raleway/Raleway-Bold.ttf"
                        tools:ignore="MissingPrefix"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ExpandableListView
                        android:id="@+id/extendable_listview2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    </ExpandableListView>

                </LinearLayout>

                <LinearLayout
                    android:background="#d8d8d8"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Using The Space"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fontPath="fonts/raleway/Raleway-Bold.ttf"
                        tools:ignore="MissingPrefix"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ExpandableListView
                        android:id="@+id/extendable_listview3"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                    </ExpandableListView>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
