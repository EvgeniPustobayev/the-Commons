<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context="anterior.com.thecommon.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#161617"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Event Detail"
            android:gravity="center"
            fontPath="fonts/raleway/Raleway-Bold.ttf"
            tools:ignore="MissingPrefix"
            />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_back_arrow"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_share"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:background="@drawable/roundbackground"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDay"
                fontPath="fonts/roboto/Roboto-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="03"
                android:textColor="#747474"
                android:textSize="35sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="MAR"
                android:textColor="#747474"
                android:textSize="15sp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:background="#e5e5e5"
            android:layout_width="2dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Commons Networking session"
                android:textColor="#747474"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tuesday at 11:30 am"
                android:textColor="#747474"
                android:textSize="14sp"
                fontPath="fonts/roboto/Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/roundbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:riv_corner_radius="3dip"
            app:riv_mutate_background="true"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="20"
            android:textColor="#747474"
            android:textSize="15dp"
            android:text="Description"
            fontPath="fonts/raleway/Raleway-Bold.ttf"
            tools:ignore="MissingPrefix"/>


        <TextView

            android:id="@+id/txtDescription"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="20"
            android:textColor="#bbbbbb"
            android:textSize="14dp"
            android:text="This is a sample message that crosses over in two lines and goes on for a while.This is a sample message that crosses over in two lines and goes on for a while." />

        <LinearLayout
            android:id="@+id/splitline"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="14.5dp"
            android:background="#e5e5e5"
            android:orientation="vertical"/>

        <RelativeLayout

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/relativeLayout2">
            <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:src="@drawable/like"
                android:id="@+id/imglike"/>

            <TextView
                android:id="@+id/txtlikes"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:gravity="left|center_vertical"
                android:layout_toRightOf="@+id/imglike"
                android:layout_alignTop="@+id/imglike"

                android:textColor="#747474"
                android:textSize="12dp"
                android:text="12" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:src="@drawable/comments"
                android:layout_marginLeft="112dp"
                android:id="@+id/imgcomment"/>
            <TextView
                android:id="@+id/txtcomment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/imgcomment"
                android:layout_alignTop="@+id/imgcomment"

                android:textColor="#bbbbbb"
                android:textSize="12dp"
                android:text="12" />

            <TextView
                android:id="@+id/txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgcomment"
                android:layout_marginRight="16dp"
                android:textColor="#bbbbbb"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:text="South Melbourne" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:src="@drawable/img_location"
                android:layout_toLeftOf="@id/txtlocation"
                android:id="@+id/imglocation"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>